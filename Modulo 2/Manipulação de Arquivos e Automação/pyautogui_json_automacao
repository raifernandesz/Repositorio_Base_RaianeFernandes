def criar():
      
    nome   = input("Nome do jogador: ")
    numero = input("Numero na camisa ")
    modelo = input("modelo ")
    tamanho = input("Tamanho ")

    dados = carregar()
    dados.append({"nome": nome, "numero": numero, "modelo": modelo, "tamanho": tamanho})
    salvar(dados)
    print("Salvo!")


